{
  "name": "eol-guardian",
  "publisher": "devflorez",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "eol",
    "line endings",
    "crlf",
    "lf",
    "editorconfig",
    "formatting"
  ],
  "icon": "media/eol-icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devflorez/unnecessary-vscode-extensions"
  },
  "bugs": {
    "url": "https://github.com/devflorez/unnecessary-vscode-extensions/issues"
  },
  "homepage": "https://github.com/devflorez/unnecessary-vscode-extensions#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eol-guardian.fixCurrentFileEol",
        "title": "%command.fix%"
      },
      {
        "command": "eol-guardian.showCurrentFileEol",
        "title": "%command.show%"
      },
      {
        "command": "eol-guardian.toggleEnabled",
        "title": "%command.toggle%"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "eolGuardian.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.enabled.description%"
        },
        "eolGuardian.expectedEOL": {
          "type": "string",
          "enum": ["auto", "lf", "crlf"],
          "default": "auto",
          "description": "%configuration.expectedEOL.description%"
        },
        "eolGuardian.detectOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.detectOnOpen.description%"
        },
        "eolGuardian.detectOnSave": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.detectOnSave.description%"
        },
        "eolGuardian.mode": {
          "type": "string",
          "enum": ["detectOnly", "askBeforeFix", "fixOnSave"],
          "default": "detectOnly",
          "description": "%configuration.mode.description%"
        },
        "eolGuardian.cooldownSeconds": {
          "type": "number",
          "default": 60,
          "description": "%configuration.cooldownSeconds.description%"
        },
        "eolGuardian.respectEditorConfig": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.respectEditorConfig.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
